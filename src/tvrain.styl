tvrainColor = #EE2375
@font-face
	font-family 'Rain Tungsten'
	src local('Rain Tungsten'), url('../fonts/rain.ttf') format('truetype')
#background
	position relative
	margin 20px
	width 768px
	height 432px

	background-image url("../images/rain.jpg")
	background-attachment scroll
	background-repeat no-repeat
	background-size contain
	border-radius 5px;
	box-shadow 0 -2px 3px 1px #C6E4FC, 0 -2px 6px 4px #F7FBFC, 0 2px 3px 1px #7E9299, 0 2px 6px 4px #7E9299

	video
		position absolute
		height 100%
		width 100%
		z-index 10
	#logo
		position absolute
		z-index 20
		height 100%
		width 100%

		font-family: /*Rain Tungsten*/Arial, sans-serif
		text-transform uppercase

		h1, h4, h2
			display block
			margin 0
			position absolute
		h1			
			font-size 165px
			top 20px
			left 60px

			color tvrainColor
			text-shadow 0 0 2px tvrainColor
			span
				display inline-block
				transform skewX(-12deg)
				//position absolute
				//clip rect(10px, auto, auto, 1px)
				//background-color white
		h4
			font-size 47px
			padding 3px
			top 195px
			left 60px
			right 76px
			padding-left 38px

			background-color tvrainColor
			color white
			&:before
				content ''
				position absolute
				width 30px
				height 1.3em
				top 0
				left -30px
				z-index 10
				
				background-image linear-gradient(to bottom right, transparent 50%, tvrainColor 50%)
			&:after
				content ''
				position absolute
				width 0
				height 0
				left -65px
				top 16px
				z-index 20

				border-style: solid;
				border-width: 45px 79px 0 0;
				border-color: white transparent transparent transparent;
				transform rotate(-34deg)

		h2
			top 265px
			left 438px			
			padding 0 20px
			font-size 4.8em
			
			h2Color = white
			background-color h2Color
			color black
			text-shadow 0 0 2px black
			&:after
				content ''
				position absolute
				width 44px
				height 1.15em
				top 0
				left 210px
				
				background-image linear-gradient(to top left, transparent 50%, h2Color 50%)