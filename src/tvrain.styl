tvrainColor = #EE2375
@font-face
	font-family 'Rain Tungsten'
	src local('Rain Tungsten'), url('../fonts/rain.ttf') format('truetype')
#background
	position relative
	margin 2em
	width 48em
	height 27em

	background-image url("../images/rain.jpg")
	background-attachment scroll
	background-repeat no-repeat
	background-size contain
	border-radius 0.3em;
	box-shadow 0 -2px 3px 1px #C6E4FC, 0 -2px 6px 4px #F7FBFC, 0 2px 3px 1px #7E9299, 0 2px 6px 4px #7E9299

	video
		position absolute
		height 100%
		width 100%
		z-index 10
	#logo
		position absolute
		z-index 20
		height 100%
		width 100%
		border 1px solid red

		font-family: Rain Tungsten, sans-serif
		text-transform uppercase

		h1
			display block
			margin 0
			text-align center
			font-size 12em

			color tvrainColor
			text-shadow 0 0 2px tvrainColor