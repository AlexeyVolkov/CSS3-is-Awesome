@keyframes bikeLoop
	for i in 0..10
		{10%*i}
			transform rotate(i*36deg)
@keyframes wheelColor
	0%
		border-radius 50%
	50%#ffd700
		border-radius 48%
	100%
		border-radius 50%
@keyframes backgroundLoop
	from
		background-position 0% 0%
	to
		background-position -800px 0%
#bike
	width 450px
	height 484px
	position relative
	margin 20px 0
	background-image url(../images/desert.jpg)
	animation backgroundLoop 3.5s linear infinite paused
	&:hover
		animation-play-state running
		#frontwheel
		#backwheel					
			animation-play-state running

	[id*="frame"]
		height 10px
		background-color red
		position absolute
		z-index 2
		border-radius 5px
		animation frameBoxShadow 1s infinite
		animation-play-state paused

	plusHeight = 102px
	#framefork
	#frameseattube
		top 233px + plusHeight
		left 270px
		width 131px
		transform rotate(41deg)
	#framefork
		top 222px + plusHeight
