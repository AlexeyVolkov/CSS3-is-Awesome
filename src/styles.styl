@keyframes bikeLoop
	for i in 0..10
		{10%*i}
			transform rotate(i*36deg)
#bike
	width 400px
	height 250px
	position relative
	margin 20px 0
	&:hover
		#frontwheel
		#backwheel					
			animation-play-state running

	[id*="frame"]
		height 10px
		background-color red
		position absolute
		z-index 2
		border-radius 5px
	#framefork
	#frameseattube
		top 88px
		left 270px
		width 131px
		transform rotate(41deg)
	#framefork
		top 77px
		left 273px
		width 118
		transform rotate(74deg)
	#frameseattube
		left 72px
	#frametop
		width 229px
		top 20px
		left 104px
		transform-origin 100% 50%
		transform rotate(-12deg)
	#framechainstay
		top 131px
		left 104px
		width 85px
	#frameseatstay
		top 89px
		left 50px
		height 6px !important
		width 99px
		transform rotate(-101deg)
	#framedowntube
		width 170px
		left 165px
		top 78px
		transform rotate(-40deg)

	.handlebars
		position relative
		left 319px
		top 5px
		z-index 3
		#post
			background-color silver
			height 10px
			width 10px
			position absolute
			top 10px
		#bar
		#handle
			position absolute
			top 5px
			width 50px
			height 10px
			background-color silver
			border-radius 20px
			transform-origin 0% 50%
			transform rotate(-20deg)
		#handle
			background-color black
			width 25px
			height 12px
			transform rotate(-20deg) translateX(25px)
	#seat
		background-color black
		position absolute
		left 76px
		top 40px
		z-index 3
		border-radius 20px
		#base
			width 30px
			height 25px
		#nose
			background-color black
			width 40px
			height 15px
			position absolute
			top 0
			left 20px
			border-bottom-right-radius 15px

	#backwheel
	#frontwheel
		width 120px
		height 120px
		position absolute
		border 10px solid black
		top 68px
		border-radius 50%
		box-shadow: inset 0 0 0 5px purple;		
		animation-name bikeLoop
		animation-duration 0.1s
		animation-iteration-count infinite
		animation-play-state paused
		
		
	.center
		position absolute
		top 56px
		left 58px
		width 10px
		height 10px
		border-radius 50%
		background-color black
	[class*="spoke"]
		height 1px
		width 62px
		background-color black
		position absolute
		top 60px		
		transform-origin 100% 50%
	.spoke1
		transform rotate(72deg)
	.spoke2
		transform rotate(144deg)
	.spoke3
		transform rotate(216deg)
	.spoke4
		transform rotate(288deg)
	#backwheel
		left 35px			
	#frontwheel
		left 278px